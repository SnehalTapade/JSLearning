


var num = 100;

console.log(num);


//  Function with No argument and No return value:

var display = function() {
    console.log(`I am Angular Developer!`);
    
}
display();
console.log(typeof display);


//  function argument with No return values:


var add = function(num1, num2){
    var result = num1 + num2;
     console.log(`addition is : ${result}`);
}
add(20,30);

//  function expression with argument and with return values:


var wordCount = function(word){

    var words = word.split(" ");
 
    // words.length is correct
    var wordCount  = word.length;   
 
    console.log(`In Given String - ${word}`);
 
    return wordCount;
 
 }
 
 var result = wordCount("I am UI Developer");
 
 console.log(`Total word count is: ${result}`);
 
 
